@{
    @model Employee
    ViewBag.Title = "Editar Empleado";
}


    <div class="card">
        <div class="card-header">
            Editar Empleado
        </div>
        <div class="card-body">
            @if (Model != null && !string.IsNullOrWhiteSpace(Model.FullName))
            {
                @using (Html.BeginForm("Edit", "Empleados", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.EmployeeId)

                    <div class="form-group">
                        @Html.Label("Nombre Completo")
                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Posición")
                        @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Coordinador o jefe inmediato")
                        @Html.TextBoxFor(model => model.ManagerId, new { @class = "form-control", type = "number" })
                    </div>

                    <div class="form-group form-check mb-2">
                        @Html.Label("Habilitar?")
                        @Html.CheckBoxFor(model => model.IsEnabled, new { @class = "form-check-input" })
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                }
            } else
            {
                <p>No hay contenido para mostrar, revise la configuración del API</p>
            }
        </div>
    </div>
