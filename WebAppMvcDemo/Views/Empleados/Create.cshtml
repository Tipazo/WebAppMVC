@{
    @model Employee
    ViewBag.Title = "Crear Empleado";
}

<div class="card">
    <div class="card-header">
        Crear Empleado
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Empleados", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Nombre Completo")
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Posición")
                @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
            </div>

            <div class="form-group mb-2">
                @Html.Label("Coordinador o jefe inmediato")
                @Html.TextBoxFor(model => model.ManagerId, new { @class = "form-control", type = "number" })
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
        }
    </div>
</div>