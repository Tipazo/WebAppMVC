@{
    @model EmployeeNode
}

<li class="mt-2">
    <strong>@Model.EmployeeId</strong> - 
    <a href="Empleados/Edit/@Model.EmployeeId">
        @Model.Position - @Model.FullName
    </a>
    @if (@Model.IsEnabled)
    {
        <span class="badge text-success">Activo</span>
    } else
    {
        <span class="badge text-danger">Inactivo</span>
    }
    
    @if (Model.Children != null && Model.Children.Any())
    {
        <ul class="mb-2">
            @foreach (var child in Model.Children)
            {
                @Html.Partial("_EmployeeTree", child)
            }
        </ul>
    }
</li>
